    <TextView
        android:id="@+id/data"
        android:layout_width="358dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/notFlat"
